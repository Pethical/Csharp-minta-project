<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:System="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate DataType="{x:Type System:Exception}">
        <StackPanel>
            <TextBlock TextWrapping="Wrap"  Margin="5">
                    <![CDATA[
                    Hiba történt a program futása közben.
                    El kívánja küldeni az információkat a fejlesztőknek?]]></TextBlock>
            <Border Margin="5" BorderBrush="Silver" BorderThickness="0,1,0,0" Padding="0,5,0,0">
                <TextBlock Text="{Binding Message}" TextWrapping="Wrap"></TextBlock>
            </Border>
        </StackPanel>
    </DataTemplate>   
</ResourceDictionary>